@model InfosAboutNba.Web.Models.Team

<h2 style="color:aquamarine">Edit/Create Team</h2>

@using (Html.BeginForm("Edit", "Teams"))
{
    @Html.ValidationSummary()

    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.ID)
    @Html.Hidden("editAction", ViewData["editAction"].ToString())

    <div class="editor-label">@Html.LabelFor(m => m.Name)</div>
    <div class="editor-field">@Html.EditorFor(m => m.Name)</div>

    <div class="editor-label">@Html.LabelFor(m => m.HomeTown)</div>
    <div class="editor-field">@Html.EditorFor(m => m.HomeTown)</div>

    <div class="editor-label">@Html.LabelFor(m => m.Found)</div>
    <div class="editor-field">@Html.EditorFor(m => m.Found)</div>

    <div class="editor-label">@Html.LabelFor(m => m.WinPercentageSinceFounded)</div>
    <div class="editor-field">@Html.EditorFor(m => m.WinPercentageSinceFounded)</div>

    <div class="editor-label">@Html.LabelFor(m => m.WinPercentageInSeason)</div>
    <div class="editor-field">@Html.EditorFor(m => m.WinPercentageInSeason)</div>

    <div class="editor-label">@Html.LabelFor(m => m.NumberOfChampionships)</div>
    <div class="editor-field">@Html.EditorFor(m => m.NumberOfChampionships)</div>

    <input type="submit" value="SEND"/>
}
